---
import AboutCard from "../ui/AboutCard.astro";
import { IoLocationOutline } from "react-icons/io5";
import { IoTimeOutline } from "react-icons/io5";
import { IoCalendarOutline } from "react-icons/io5";

// Icon mapping
const iconMap: Record<string, any> = {
  location: IoLocationOutline,
  time: IoTimeOutline,
  clock: IoTimeOutline,
  calendar: IoCalendarOutline,
  reservations: IoCalendarOutline,
};

// JSON data to display on the page
const cardData = [
  {
    iconName: "location",
    title: "Locate Us",
    description: "Riverside 25, San Francisco, California",
    link: "#"
  },
  {
    iconName: "clock",
    title: "Open Hours", 
    description: "Mon To Fri 9:00 AM - 9:00 PM",
    link: "#"
  },
  {
    iconName: "reservations",
    title: "Reservations",
    description: "",
    link: "mailto:hirestaurantate@gmail.com"
  }
];
---

<section class="bg-black py-20">
    <div class="max-w-7xl mx-auto px-6">
        <!-- Top Info Cards -->
        <div class="grid md:grid-cols-3 gap-12 mb-20">
            {cardData.map((card) => (
                <AboutCard
                    icon={iconMap[card.iconName]}
                    title={card.title}
                    description={card.description}
                    link={card.link}
                />
            ))}
        </div>

        <!-- Story Section -->
        <div class="hidden lg:grid lg:grid-cols-2 gap-16 items-center">
            <!-- Image -->
            <div class="relative">
                <div
                    class="w-full bg-gray-800 rounded-lg shadow-2xl overflow-hidden"
                    style="aspect-ratio: 4/3;"
                >
                    <img
                        src="/images/table.png"
                        alt="Restaurant Interior"
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />
                </div>
            </div>

            <!-- Content -->
            <div class="text-white">
                <h2 class="text-4xl lg:text-5xl font-bold mb-8">The Story</h2>
                <p class="text-gray-300 text-lg leading-relaxed mb-12">
                    Lorem Ipsum is that it has a more-or-less normal
                    distribution of letters, as opposed to using 'Content here,
                    content elsewhere', making it look like readable English.
                    Many desktop publishing packages.
                </p>

                <!-- Timeline -->
                <div class="grid md:grid-cols-2 gap-12">
                    <div>
                        <h3 class="text-6xl font-bold text-white mb-4">1996</h3>
                        <p class="text-gray-300 mb-8">
                            Lorem Ipsum is that it has a more-or-less normal
                            distribution
                        </p>
                        <div
                            class="text-sm text-gray-400 tracking-widest uppercase"
                        >
                            JOSEFINE
                        </div>
                    </div>

                    <div>
                        <h3 class="text-6xl font-bold text-white mb-4">2021</h3>
                        <p class="text-gray-300 mb-8">
                            Lorem Ipsum is that it has a more-or-less normal
                            Content content
                        </p>
                    </div>
                </div>

                <!-- Signature -->
                <div class="mt-12">
                    <div class="text-4xl font-script text-white">Josefine</div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .font-script {
        font-family: "Dancing Script", cursive;
    }
</style>
