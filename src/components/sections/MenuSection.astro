---
import Subtitle from "../ui/Subtitle.astro";
import MenuItem from "../ui/ItemMenu.astro";

interface MenuItemData {
  name: string;
  description: string;
  price: number;
  image: {
    src: string;
    alt: string;
  };
}

interface Props {
  title?: string;
  items?: MenuItemData[];
  class?: string;
}

const { title = "Our Menu", items = [], class: className } = Astro.props;
---

<div
  class:list={[
    "justify-center md:justify-start",
    "items-center md:items-start",
    "w-full",
    "pt-0",
    "pb-0",
    className,
  ]}
>
  <Subtitle ish2={false} iswhite={false} class:list={["!text-4xl"]}>
    {title}
  </Subtitle>

  <div class:list={["flex", "flex-col"]}>
    {
      items.map((item) => (
        <MenuItem
          name={item.name}
          description={item.description}
          price={item.price}
          image={item.image}
        />
      ))
    }
  </div>
</div>
