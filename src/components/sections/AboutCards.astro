---
import AboutCard from '../ui/AboutCard.astro'
import CardInfo from '../ui/CardInfo.astro'
import { IoLocationOutline, IoReceiptOutline } from 'react-icons/io5'
import { IoTimeOutline } from 'react-icons/io5'
import { IoCalendarOutline } from 'react-icons/io5'
import { infoCards } from '../../data/api/BaseAPI'
// Icon mapping
const iconMap: Record<string, any> = {
  location: IoLocationOutline,
  time: IoTimeOutline,
  clock: IoTimeOutline,
  calendar: IoCalendarOutline,
  reservations: IoCalendarOutline,
  invoice: IoReceiptOutline,
}

// Card data interface
interface CardData {
  iconName: string
  title: string
  description: string
  link: string
}

// JSON data to display on the page
const cardData: CardData[] = await infoCards()
---

<section class:list={['bg-black', 'py-20']} id="about">
  <div class:list={['max-w-7xl', 'mx-auto', 'px-6']}>
    <!-- Top Info Cards -->
    <div class:list={['grid', 'grid-cols-1 lg:grid-cols-3', 'gap-12', 'mb-20']}>
      {
        cardData.map((card) => (
          <AboutCard
            icon={iconMap[card.iconName]}
            title={card.title}
            description={card.description}
            link={card.link}
          />
        ))
      }
    </div>

    <CardInfo />
  </div>
</section>
