---
interface Props {
  href: string;
  openInNewTab?: boolean;
  class?: string;
}

const { href, openInNewTab = false, class: className = "" } = Astro.props;

const linkStyles = [
  "text-brand-orange",
  "hover:text-brand-orange",
  "transition-colors",
  "duration-200",
  className,
];
---

<a
  href={href}
  class:list={linkStyles}
  target={openInNewTab ? "_blank" : undefined}
  rel={openInNewTab ? "noopener noreferrer" : undefined}
>
  <slot />
</a>
