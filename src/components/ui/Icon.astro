---
interface Props {
  href: string;
  openInNewTab?: boolean;
  className?: string;
}

const { href, openInNewTab = false, className } = Astro.props;
---

<a
  href={href}
  target={openInNewTab ? "_blank" : undefined}
  rel={openInNewTab ? "noopener noreferrer" : undefined}
  class:list={[
    "text-brand-orange hover:text-brand-white",
    "transition-colors",
    "duration-200",
    "inline-flex",
    "items-center",
    "justify-center",
    "w-10",
    "h-10",
    "rounded-full",
    className,
  ]}
>
  <slot />
</a>
