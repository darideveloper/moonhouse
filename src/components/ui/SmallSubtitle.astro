---
interface Props {
  ish2?: boolean;
  iswhite?: boolean;
  class?: string;
  lineClass?: string;
}

const {
  ish2 = false,
  iswhite = false,
  class: className = "",
  lineClass = "",
} = Astro.props;

const baseLineClasses = ["w-12", "h-px", "bg-brand-orange"];

const lineClasses = lineClass
  ? [...baseLineClasses, lineClass]
  : baseLineClasses;

const baseTextStyles = ["uppercase", "font-medium", "tracking-wide"];

const colorStyles = iswhite ? "text-white" : "text-black";

const h2Styles = [...baseTextStyles, "text-sm", colorStyles, className];

const h3Styles = [...baseTextStyles, "text-xs", colorStyles, className];

const topLineStyles = [...lineClasses, "mb-2"];

const bottomLineStyles = [...lineClasses, "mt-1"];
---

<div class:list={topLineStyles}></div>

{
  ish2 ? (
    <h2 class:list={h2Styles}>
      <slot />
    </h2>
  ) : (
    <h3 class:list={h3Styles}>
      <slot />
    </h3>
  )
}

<div class:list={bottomLineStyles}></div>
