---
export interface Props {
  icon: any;
  title: string;
  description: string;
  link?: string;
}

const { icon: IconComponent, title, description, link } = Astro.props;
---

<div class="flex items-start gap-6 text-white">
  <div class="flex-shrink-0 w-16 h-16 bg-white rounded-full flex items-center justify-center">
    <div class="w-8 h-8 flex items-center justify-center text-black">
      <IconComponent size={32} />
    </div>
  </div>
  <div class="flex-1">
    <h3 class="text-2xl font-bold mb-2">{title}</h3>
    {description && (
      <p class="text-gray-300 leading-relaxed mb-2">
        {description}
      </p>
    )}
    {link && link !== "#" && (
      <a 
        href={link}
        class="text-gray-300 hover:text-white transition-colors duration-200 underline"
      >
        {link.startsWith('mailto:') ? link.replace('mailto:', '') : link}
      </a>
    )}
  </div>
</div>
