---
// CardInfo component - Story section with timeline
// Libs
import { marked } from "marked";
// Props
interface Props {
  aboutTexts?: string[];
  aboutImages?: string[];
}

const { aboutTexts = [], aboutImages = [] } = Astro.props;

// Data
const altText = "Restaurant Interior (Moonhouse)";

// Use first image from API or fallback to default
const imageUrl = aboutImages.length > 0 ? aboutImages[0] : "";

// Use first text from API or fallback to default
const defaultText = ``;

const storyText = aboutTexts.length > 0 ? aboutTexts[0] : defaultText;

// Components
import Subtitle from "./Subtitle.tsx";
---

<div>
  <div class:list={["lg:grid", "lg:grid-cols-2", "gap-16", "items-center"]}>
    <div class:list={["relative"]}>
      <div class:list={["text-white"]}>
        <Subtitle ish2={true} iswhite={true} className={"my-8"}>
          The Story
        </Subtitle>

        <div
          class:list={["text-gray-300", "text-lg", "leading-relaxed", "mb-12"]}
          set:html={await marked.parse(storyText)}
        />

        <div class:list={["mt-12"]}>
          <div class:list={["text-4xl", "text-white", "font-script"]}>
            Moonhouse
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
