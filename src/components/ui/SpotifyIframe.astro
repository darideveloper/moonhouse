---
interface Props {
  spotifyEmbedUrl: string
  class?: string
}
const { spotifyEmbedUrl, class: className = '' } = Astro.props
---

<div
  data-aos='zoom-in-up'
  data-aos-delay='300'
>
  <iframe
    title='Spotify Playlist'
    src={spotifyEmbedUrl}
    width='100%'
    height='360'
    allowfullscreen=''
    allow='autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture'
    loading='lazy'
    class:list={className}
  ></iframe>
</div>
