---
interface Props {
  spotifyEmbedUrl: string
  class?: string
}
const { spotifyEmbedUrl, class: className = '' } = Astro.props
---

<iframe
  title='Spotify Playlist'
  src={spotifyEmbedUrl}
  width='100%'
  height='360'
  allowfullscreen=''
  allow='autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture'
  loading='lazy'
  class:list={className}
></iframe>
