---
import Layout from "../layouts/Layout.astro";
import AboutCards from "../components/sections/AboutCards.astro";
import Hero from "../components/sections/Hero.astro";
import SpecialOffers from "../components/sections/SpecialOffers.astro";
import Footer from "../components/sections/Footer.astro";

const specialOffersData = {
  smallsubtitle: "Menu",
  subtitle: "Try Our Special Offers",
  description:
    "Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content making it look like readable English.",
  image: {
    src: "/images/durazno.webp",
    alt: "Pastel con duraznos",
  },
};
---

<Layout>
  <Hero />
  <AboutCards />
  <SpecialOffers
    smallsubtitle={specialOffersData.smallsubtitle}
    subtitle={specialOffersData.subtitle}
    description={specialOffersData.description}
    image={specialOffersData.image}
  />
  <Footer />
</Layout>
